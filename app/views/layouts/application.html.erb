<style>

  impulse{
    font-family: "Lucida Console";
    color: white;
    font-size: 24px;
    line-height: 1.0;
    margin-left: -5px;
    text-shadow:
       2px 2px 0 #006666,
     -1px -1px 0 #000,
      1px -1px 0 #000,
      -1px 1px 0 #000,
       1px 1px 0 #000;
}

impulselogo{
  margin-left: -50px;
    text-shadow:
       1px 1px 0 #006666,
     1px 1px 0 #000,
      1px 1px 0 #000,
      1px 1px 0 #000,
       1px 1px 0 #000;
}

</style>

<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | Im.Pulse </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<!- - [if lt IE 9]>
    <script src="//cdnj.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
    </script>
  <! [endif] -->
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
       <ul class ="nav navbar-nav navbar-left">
         <table width="20%">
            <tr>
              <td width="40%" align="left"><impulselogo><%= image_tag("icon2.png", :alt => "logo", size: "90x50", padding: "1px") %></impulselogo></td>
              <td width="60%" align="center"><font color="white"><impulse><b>&nbsp;Im.Pulse</b></impulse></font></td>
             </tr>
         </table>
      </ul>
       <ul class ="nav navbar-nav navbar-right" id="nav">

<% if logged_in? %>
         <li><%= link_to "Surge Feed", surgefeed_path %></li>
         <li><%= link_to "My Pulse", userfeed_path %></li>
         <li><%= link_to "Search Videos", videos_path %></li>
         <li><%= link_to "Im.Pulse Community", users_path %></li>         
         <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Me <b class="caret"></b>
           </a>
           <ul class="dropdown-menu">

             <li><%= link_to "Profile", current_user %></li>
             <li><%= link_to "Upload Video", root_path %></li>
             <li class="divider"></li>
             <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
           </ul>
          </li>

         <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Account <b class="caret"></b>
           </a>
           <ul class="dropdown-menu">
             <li><%= link_to "Help", help_path %></li>
              <li><%= link_to "Contact", contact_path %></li>
             <li><%= link_to "Support", support_path %></li>
           <li><%= link_to "About", about_path %></li>
             <li class="divider"></li>
             <li> <%= link_to "Log Out", logout_path, method: "delete" %>
             </li>
           </ul>
          </li>
<% else %>
          <li><%= link_to "Welcome", root_path %></li>
         <li><%= link_to "Contact", contact_path %></li>
         <li><%= link_to "Support", support_path %></li>
         <li><%= link_to "About", about_path %></li>
           <li><%= link_to "Log In", login_path %></li>
<% end %>
      </ul>
   </nav>
  </div>
</header>
<br><br><br>

  <div class="container">
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>


    </div>

</body>
</html>
