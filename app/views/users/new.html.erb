<% provide(:title, 'Sign Up!') %>
<body>
<h1>Sign Up For Im.Pulse Below:</h1>

<hr>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <section class="user_info">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <this><b> First Name: </b></this>
      <%= f.text_field :fname, class: 'form-control' %>

    <this><b> Last Name: </b></this>
      <%= f.text_field :lname, class: 'form-control' %>

    <this><b> Username: </b></this>
    <%= f.text_field :username, class: 'form-control' %>

    <this><%= f.label :location %></this>
      <%= f.text_field :location, class: 'form-control' %>

  <this>  <%= f.label :bio %></this>
      <%= f.text_field :bio, class: 'form-control' %>

   <this> <%= f.label :interests %></this>
    <%= f.text_field :interests, class: 'form-control' %>

   <this>   <%= f.label :email %></this>
      <%= f.email_field :email, class: 'form-control' %>

    <this>  <%= f.label :password %></this>
      <%= f.password_field :password, class: 'form-control' %>

  <this>  <%= f.label :password_confirmation, "Password Confirmation" %></this>
      <%= f.password_field :password_confirmation, class: 'form-control' %>



      <%= f.submit "Create My Account!", class: "btn btn-primary" %>
    <% end %>
    </section>
      </div>
</div>

</body>
