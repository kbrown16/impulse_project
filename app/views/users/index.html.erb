<% provide(:title, 'Im.Pulse Members') %>
<body>

  <div class="backbox">
<div class="row">

<section class="search">
  <%= form_tag(users_path, :method => "get", id: "search-form") do %>
        <boxtitle text-align="center"> Search Here </boxtitle>
  <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
  <%= submit_tag "Search", class: "searchbutton" %>
    <% end %>
</section>



 <section class="user_info" >
    <ul class="users">
     <videohead>Im.Pulse Community Members</videohead>
      <hr>
      <% if @users.present? %>
      <%= render @users %>
    </ul>
       <% else %>
    <p>There are no users containing the term(s) <%= params[:search] %>.</p>
       <% end %>

  </section>



    </div>
  </div>
</body>




