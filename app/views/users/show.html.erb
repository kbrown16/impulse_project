<% provide(:title, 'Profile') %>
<body>
<p id="notice"><%= notice %></p>

<div class="backbox">
<div class="row">

    <section class="user_info">

<h1> <%= gravatar_for @user %> </h1>
<br/>

<p>
  <usernamehead><strong>Username:</strong></usernamehead>
    <username><%= @user.username %></username>
  </p>
<section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <br/>
      
      <hr>
<p>
  <this><strong>Name:</strong></this>
  <%= @user.fname %>
</p>

<br/>
<p>
  <this><strong>Location:</strong></this>
  <%= @user.location %>
</p>
<br/>
<p>
  <this><strong>Bio:</strong></this>
  <%= @user.bio %>
</p>
<br/>
<p>
  <this><strong>Interests:</strong></this>
  <%= @user.interests %>
</p>
      </section>



  <section class="video_info" >
    <%= render 'follow_form' if logged_in? %>
    <div class="uservids"  >

    <% if @user.videos.any? %>
    <videohead>Video Uploads (<%= @user.videos.count %>)</videohead>
      <ol class="videos" >
        <%= render @videos %>
      </ol>
    <%= will_paginate @videos %>
    <% end %>
  </div>
    </section>

</div>
  </div>


</body>

